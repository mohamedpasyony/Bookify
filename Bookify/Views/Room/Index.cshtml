@model List<Room>

@{
    ViewData["Title"] = "All Rooms";
}

<div class="container-fluid py-4">
    <div class="row">
        <div class="col-12">
            <div class="card my-4">
                <div class="card-header p-0 position-relative mt-n4 mx-3 z-index-2">
                    <div style="background-color:#D4AF37;" class=" border-radius-lg pt-4 pb-3">
                        <h6 class="text-white text-capitalize ps-3">Rooms</h6>

                    </div>
                    <a asp-action="Create" asp-controller="Room" class="text-white btn  text-xs mt-3" style="background-color:#D4AF37;color:white" data-toggle="tooltip" data-original-title="Edit user">
                        Add New Room
                    </a>
                </div>
                <div class="card-body px-0 pb-2">
                    <div class="table-responsive p-0">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>
                                        Status
                                    </th>
                                    <th>
                                        RoomType
                                    </th>
                                    <th>
                                        Description
                                    </th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            @item.Status
                                        </td>
                                        <td>
                                            @item.RoomType.Name
                                        </td>
                                        <td>
                                            @item.RoomType.Description
                                        </td>
                                        <td>
                                            <a asp-action="Edit" asp-route-id="@item.RoomNum">Edit</a> |
                                            <a asp-action="Details" asp-route-id="@item.RoomNum">Details</a> |
                                            <a asp-action="Delete" asp-route-id="@item.RoomNum">Delete</a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
